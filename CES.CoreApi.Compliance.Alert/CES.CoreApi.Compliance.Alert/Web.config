	<log4net>
		<appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date [%thread] %-5level %logger [%ndc] - %message%newline" />
			</layout>
		</appender>
		<!--GrayLog Appender (DEV)-->
		<appender name="GelfUdpAppender_DEV" type="Gelf4net.Appender.GelfUdpAppender, Gelf4net">
			<remoteAddress value="10.30.8.235" />
			<remotePort value="12201" />
			<layout type="Gelf4net.Layout.GelfLayout, Gelf4net">
				<param name="AdditionalFields" value="app:FxOnline,environment:Development,timestamp:%date,thread:%thread,level:%level,logger:%logger" />
				<param name="ConversionPattern" value="%utcdate %7level [%thread] [call:%property{callType} | agentID:%property{agentID} | orderID:%property{orderID}] %20.30logger (%r ms) - %message%newline" />
			</layout>
		</appender>
		<!--GrayLog Appender (PROD)-->
		<appender name="GelfUdpAppender_PROD" type="Gelf4net.Appender.GelfUdpAppender, Gelf4net">
			<remoteAddress value="10.30.8.6" />
			<remotePort value="12200" />
			<layout type="Gelf4net.Layout.GelfLayout, Gelf4net">
				<param name="AdditionalFields" value="app:FxOnline,environment:Development,timestamp:%date,thread:%thread,level:%level,logger:%logger" />
				<param name="ConversionPattern" value="%utcdate %7level [%thread] [call:%property{callType} | agentID:%property{agentID} | orderID:%property{orderID}] %20.30logger (%r ms) - %message%newline" />
			</layout>
		</appender>
		<appender name="GelfUdpAppender" type="gelf4net.Appender.GelfUdpAppender, Gelf4net">
			<remoteAddress value="10.30.8.235" />
			<remotePort value="12200" />
			<layout type="Gelf4net.Layout.GelfLayout, Gelf4net">
				<param name="AdditionalFields" value="app:App_Name,service:Service_Name,date:%date,thread:%thread,level:%level" />
				<param name="ConversionPattern" value="%message" />
			</layout>
		</appender>
		<appender name="ErrorLogFileAppender" type="log4net.Appender.RollingFileAppender">
			<file type="log4net.Util.PatternString" value="C:\logs\CoreApi_Compliance_Alert_%date{yyyy-MM-dd}.txt" />
			<layout type="log4net.Layout.PatternLayout">
				<param name="ConversionPattern" value="%newline%date - %m%newline" />
			</layout>
			<filter type="log4net.Filter.LevelMatchFilter">
			  <acceptOnMatch value="true" />
			  <levelToMatch value="INFO" />
		  </filter>
		  <filter type="log4net.Filter.LevelMatchFilter">
			  <acceptOnMatch value="true" />
			  <levelToMatch value="ERROR" />
		  </filter>
		  <filter type="log4net.Filter.DenyAllFilter" />
		</appender>
		<root>
			<level value="ALL" />
			<appender-ref ref="ConsoleAppender" />
			<appender-ref ref="GelfUdpAppender" />
			<appender-ref ref="GelfUdpAppender_DEV" />
			<appender-ref ref="GelfUdpAppender_PROD" />
			<appender-ref ref="ErrorLogFileAppender" />
		</root>
